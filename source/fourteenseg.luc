module fourteenseg (
    input dot,
    input num [4],
    input char[8],
    output segs[15]
  ) {
  
  sig sg [14];
  
  // DP N M L K J H G2 G1 F E D C B A
  always {
    case (char) {
      8h18: sg = 14b01001011001001; // end of transmission
      8h19: sg = 14b01010111000000; // cancel
      8h1a: sg = 14b01001011111001; // end of medium
      8h1b: sg = 14b00000011100011; // substitute
      8h1c: sg = 14b00010100110000; // esc
      8h1d: sg = 14b01001011001000; // file sep
      8h1e: sg = 14b11101000000000; // record sep
      8h1f: sg = 14b01011100000000; // unit sep
      " ": sg = 14b00000000000000;
      "!": sg = 14b00000000000110;
      "\"": sg = 14b00001000100000;
      "#": sg = 14b01001011001110;
      "$": sg = 14b01001011101101;
      "%": sg = 14b00110000100100;
      "&": sg = 14b10001101011101;
      "\'": sg = 14b00010000000000;
      "(": sg = 14b10010000000000;
      ")": sg = 14b00100100000000;
      "*": sg = 14b11111111000000;
      "+": sg = 14b01001011000000;
      ",": sg = 14b00100000000000;
      "-": sg = 14b00000011000000;
      ".": sg = 14b00000000000000;
      "/": sg = 14b00110000000000;
      "0": sg = 14b00110000111111;
      "1": sg = 14b00000000000110;
      "2": sg = 14b00000011011011;
      "3": sg = 14b00000010001111;
      "4": sg = 14b00000011100110;
      "5": sg = 14b10000001101001;
      "6": sg = 14b00000011111101;
      "7": sg = 14b00000000000111;
      "8": sg = 14b00000011111111;
      "9": sg = 14b00000011101111;
      ":": sg = 14b01001000000000;
      ";": sg = 14b00101000000000;
      "<": sg = 14b10010000000000;
      "=": sg = 14b00000011001000;
      ">": sg = 14b00100100000000;
      "?": sg = 14b01000010000011;
      "@": sg = 14b00001010111011;
      "A": sg = 14b00000011110111;
      "B": sg = 14b01001010001111;
      "C": sg = 14b00000000111001;
      "D": sg = 14b01001000001111;
      "E": sg = 14b00000011111001;
      "F": sg = 14b00000001110001;
      "G": sg = 14b00000010111101;
      "H": sg = 14b00000011110110;
      "I": sg = 14b01001000000000;
      "J": sg = 14b00000000011110;
      "K": sg = 14b10010001110000;
      "L": sg = 14b00000000111000;
      "M": sg = 14b00010100110110;
      "N": sg = 14b10000100110110;
      "O": sg = 14b00000000111111;
      "P": sg = 14b00000011110011;
      "Q": sg = 14b10000000111111;
      "R": sg = 14b10000011110011;
      "S": sg = 14b00000011101101;
      "T": sg = 14b01001000000001;
      "U": sg = 14b00000000111110;
      "V": sg = 14b00110000110000;
      "W": sg = 14b10100000110110;
      "X": sg = 14b10110100000000;
      "Y": sg = 14b01010100000000;
      "Z": sg = 14b00110000001001;
      "[": sg = 14b00000000111001;
      "\\": sg = 14b10000100000000;
      "]": sg = 14b00000000001111;
      "^": sg = 14b00110000000011;
      "_": sg = 14b00000000001000;
      "`": sg = 14b00000100000000;
      "a": sg = 14b01000001011000;
      "b": sg = 14b10000001111000;
      "c": sg = 14b00000011011000;
      "d": sg = 14b00100010001110;
      "e": sg = 14b00100001011000;
      "f": sg = 14b00000001110001;
      "g": sg = 14b00010010001110;
      "h": sg = 14b01000001110000;
      "i": sg = 14b01000000000000;
      "j": sg = 14b00000000001110;
      "k": sg = 14b11011000000000;
      "l": sg = 14b00000000110000;
      "m": sg = 14b01000011010100;
      "n": sg = 14b01000001010000;
      "o": sg = 14b00000011011100;
      "p": sg = 14b00000101110000;
      "q": sg = 14b00010010000110;
      "r": sg = 14b00000001010000;
      "s": sg = 14b10000010001000;
      "t": sg = 14b00000001111000;
      "u": sg = 14b00000000011100;
      "v": sg = 14b10000000000100;
      "w": sg = 14b10100000010100;
      "x": sg = 14b10100011000000;
      "y": sg = 14b10000000001100;
      "z": sg = 14b00100001001000;
      "{": sg = 14b00100101001001;
      "|": sg = 14b01001000000000;
      "}": sg = 14b10010010001001;
      "~": sg = 14b00010100100000;
      8h7f: sg = 14b11111111111111;
      default: sg = 0;
    }
    case (num) {
      0: sg = 14b00110000111111;
      1: sg = 14b00000000000110;
      2: sg = 14b00000011011011;
      3: sg = 14b00000010001111;
      4: sg = 14b00000011100110;
      5: sg = 14b10000001101001;
      6: sg = 14b00000011111101;
      7: sg = 14b00000000000111;
      8: sg = 14b00000011111111;
      9: sg = 14b00000011101111;
    }
    segs = c{dot, sg};
  }
}
